{% extends 'admin/base.html.twig' %}

{% block title %}Administrateur des commentaires!{% endblock %}

{% block body %}
<div class="container-fluid">
        <h1 class="my-5">Gestion des commentaires</h1>
         <div class="row">
                    <div class="col-lg-12 my-3">
                        <div class="card filterable" style="overflow:auto;">
                            <div class="card-header bg-success text-white">
                                <span>
                                     <i class="livicon" data-name="responsive" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                                    Re-order Columns
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive-lg table-responsive-sm table-responsive-md">
                                    <table class="table table-striped table-bordered" id="table2"
                                       width="100%">
                                    <thead>
                                        <tr>
                                           <th>id</th>
                                        <th>Date</th>
                                        <th>utilisateur</th>
                                        <th>commentaire</th>
                                            <th class="text-center">Note</th>
                                            <th class="text-center">Annonce</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                         {% for comment in comments %}
                                        <tr>
                                          
                                           <td>{{ comment.id }} </td>
                <td>{{ comment.createdAt| date('d/m/Y H:i') }}</td>
               <td><img src="{{comment.user.picture}}" alt="avatar de {{comment.user.fullName}}" class="avatar avatar-micro mr-2" style="max-width:30px;max-height:30px;">{{ comment.user.fullName }}</td>
                <td>{{ comment.content }}</td>
                 <td class="text-center">
                    <span class="badge badge-dark ">
                            {{ comment.rating }}
                    </span>
                </td>
                
                 <td class="text-center">
                      
                        {{ comment.ad.titre }}
                         
                  </td>
                 <td>  <a href="{{path('admin_edit_comment',{'id':comment.id})}}" class="btn btn-dark"><i class="fas fa-pen"></i></a> 
                       <a href="{{path('admin_supp_comment',{'id':comment.id})}}" class="btn btn-danger"onclick="return confirm('Etes vous sÃ»r de supprimer ce comment?');"><i class="fas fa-trash"></i></a>

           
                <td>
                                        </tr>
                                             {% endfor %}
                                    </tbody>
                                </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- row-->
</div>
{% endblock %}
